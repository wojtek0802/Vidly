@using Vidly.Models
@model List<Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<input type="button" value="New Movie" class="btn btn-info" onclick="location.href='@Url.Action("MovieForm","Movies")'"/>
<br \><br \>
@if (Model.Count == 0)
{
    <p>We don't have any movies yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name,"Edit","Movies", new { id = movie.Id },null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

